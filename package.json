    "mustache-express": "^1.3.2",
    "prettier": "^3.5.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typedi": "^0.10.0",
    "typescript": "^5.7.2"
